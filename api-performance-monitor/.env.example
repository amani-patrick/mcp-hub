# =============================================================================
# API Performance Monitor Environment Configuration
# =============================================================================

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================
# Enable/disable authentication (false for self-hosting, true for public hosting)
ENABLE_AUTH=false

# API Key for authentication (required if ENABLE_AUTH=true)
API_KEY=

# Basic Auth credentials (alternative to API key)
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=

# JWT Secret (for token-based authentication)
JWT_SECRET=

# =============================================================================
# RATE LIMITING SETTINGS
# =============================================================================
# Rate limit per minute per tool (0 or high number = disabled)
RATE_LIMIT_PER_MINUTE=1000

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# DASHBOARD SETTINGS
# =============================================================================
# Dashboard port
DASHBOARD_PORT=3001

# Auto-start dashboard on server start
AUTO_START_DASHBOARD=true

# =============================================================================
# EXTERNAL MONITORING INTEGRATIONS
# =============================================================================
# Datadog Integration
DATADOG_API_KEY=
DATADOG_SITE=datadoghq.com

# New Relic Integration
NEWRELIC_LICENSE_KEY=
NEWRELIC_APP_NAME=api-performance-monitor

# Prometheus Integration
PROMETHEUS_GATEWAY=http://prometheus-gateway:9091
PROMETHEUS_JOB=api-performance

# Slack Integration
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#performance-alerts

# =============================================================================
# STORAGE SETTINGS
# =============================================================================
# Storage type (memory, file, redis)
STORAGE_TYPE=file

# File storage path
FILE_STORAGE_PATH=./data/metrics.json

# Redis connection (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/performance-monitor.log

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Environment (development, production)
NODE_ENV=production

# Server host (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# =============================================================================
# SELF-HOSTING CONFIGURATION (DISABLED)
# =============================================================================
# For self-hosting, these settings are disabled by default:
# - ENABLE_AUTH=false (no authentication required)
# - RATE_LIMIT_PER_MINUTE=1000 (effectively disabled)
# - STORAGE_TYPE=file (local file storage)

# =============================================================================
# PUBLIC HOSTING CONFIGURATION (ENABLE THESE)
# =============================================================================
# For public hosting, enable these settings:
# - ENABLE_AUTH=true
# - API_KEY=your-secure-api-key
# - RATE_LIMIT_PER_MINUTE=100
# - STORAGE_TYPE=redis
# - DATADOG_API_KEY=your-datadog-key
# - SLACK_WEBHOOK=your-slack-webhook
