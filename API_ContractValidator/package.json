{
  "name": "mcp-api-contract-validator",
  "version": "0.1.0",
  "description": "MCP tool for validating API responses and detecting breaking OpenAPI changes",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node --esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "cli": "ts-node --esm src/cli/index.ts",
    "cli:build": "tsc && node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "start:prod": "chmod +x scripts/start-production.sh && ./scripts/start-production.sh",
    "start:dev": "chmod +x scripts/start-development.sh && ./scripts/start-development.sh",
    "docker:build": "docker build -t mcp-api-contract-validator:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mcp-api-contract-validator:latest",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up -d --build"
  },
  "bin": {
    "api-contract-validator": "dist/cli/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.1",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "glob": "^10.3.10",
    "yaml": "^2.4.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/cli/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
